#!/bin/bash
# postinst script for aria2
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
  configure)
    APPDIR=/apps/aria2
    chown -R admin:admin $APPDIR
    cp /apps/aria2/bin/aria2c_server /etc/init.d/ --preserve
	
#create Share
partage=$(rn_nml -g shares | grep Aria2 | awk -F"\"" '{print $2}')

if [ -z ${partage} ]; then
 rn_nml -a share:/*/Aria2
 partage=$(rn_nml -g shares | grep Aria2 | awk -F"\"" '{print $2}')
 elif [ -z ${partage} ]; then
 exit 1

 else
 mkdir -p /${partage}/Downloads
 chown guest.guest /${partage}/ -R
 download=/${partage}/Downloads
 sed -i "s:/home/admin/downloads/:${download}:" /apps/aria2/bin/aria2.conf
fi

if [ ! -d "/${partage}/Downloads" ]; then
 mkdir -p /${partage}/Downloads
 chown guest.guest /${partage}/ -R
 download=/${partage}/Downloads
 sed -i "s:/home/admin/downloads/:${download}:" /apps/aria2/bin/aria2.conf
fi


#edit config.xml	
	code=$(cat /dev/urandom | tr -dc A-Za-z0-9 | head -c 10)
	url="\/apps\/aria2\/$code.html"
	sed -i "s/http:\/\/aria2.github.io/$url/g" /apps/aria2/config.xml
	
#make password for config.php	
	pass=$(cat /dev/urandom | tr -dc a-z1-9 | head -c 6)
	sed -i "s/netgear/$pass/g" /apps/aria2/web/password.html
	sed -i "s/password='netgear'/password='$pass'/g" /apps/aria2/web/config.php


#backup aria2.conf
	pass_rpc=$(cat /dev/urandom | tr -dc A-Za-z0-9 | head -c 6)
	sed -i "s/rpc-secret=netgear/rpc-secret=$pass_rpc/g" /apps/aria2/bin/aria2.conf
	mv /apps/aria2/web/password.html /apps/aria2/web/$code.html
	cp /apps/aria2/bin/aria2.conf /apps/aria2/bin/aria2.conf_bak --preserve

#check arm or x86
	info=$(uname -a)
	if [[ "{$info}" =~ "arm" ]]; then
    mv /apps/aria2/bin/aria2c_arm /apps/aria2/bin/aria2c
    rm -f /apps/aria2/bin/aria2c_x64
	elif [[ "{$info}" =~ "x86" ]];then
    mv /apps/aria2/bin/aria2c_x64 /apps/aria2/bin/aria2c
    rm -f /apps/aria2/bin/aria2c_arm
	fi


    if systemctl restart apache2.service; then
      # success
      event_push app readynasd '<add-s resource-type="LocalApp" resource-id="LocalApp"><LocalApp appname="aria2" success="1"/></add-s>' 0 0
    else
      # error
      event_push app readynasd '<add-s resource-type="LocalApp" resource-id="LocalApp"><LocalApp appname="aria2" success="0"/></add-s>' 0 0
    fi
    ;;

  abort-upgrade|abort-remove|abort-deconfigure)
    ;;

  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
